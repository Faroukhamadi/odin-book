block content
  .container-fluid.fill-height.d-flex.flex-column.align-items-center.justify-content-center
    h1#logo.display-4 odinbook
    .card#login-card
      .card-body
        h3.card-title Create a new account
        h4.card-subtitle.mb-2.text-muted Card subtitle
        hr
        .input-group
          input(type="text")
        .mb-3
          input(type="email", name="username", id="username", class="form-control form-control-lg", placeholder="Email or phone number")
        .mb-3
          input(type="password", name="password", id="password", class="form-control form-control-lg", placeholder="Password")
        .d-grid.gap-2.mb-3
          button(class="btn btn-primary login-button", type="button") Log In
        .d-grid.gap-2
          button(class="btn btn-primary login-button", type="button") Log In with Facebook
        hr
        .d-grid.create-div
          a(href="/auth/signup") 
            button(type="button", class="btn btn-success create-button") Create new account